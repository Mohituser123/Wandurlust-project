<% if(success && success.length){ %>
    <div class="alert flash-alert flash-success col-6 offset-3" role="alert">
        <i class="fa-solid fa-circle-check me-2"></i>
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<% if(error && error.length){ %>
    <div class="alert flash-alert flash-error col-6 offset-3" role="alert">
        <i class="fa-solid fa-triangle-exclamation me-2"></i>
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<style>
.flash-alert {
    border-radius: 999px;
    padding: 0.7rem 1.5rem;
    font-weight: 500;
    font-size: 0.95rem;
    box-shadow: 0 8px 25px rgba(0,0,0,0.1);
    display: flex;
    align-items: center;
    gap: 0.5rem;
    opacity: 0;
    transform: translateY(-20px);
    animation: flashSlideDown 0.5s forwards;
    position: relative;
}

.flash-success {
    background: linear-gradient(135deg, #28a745, #71e288);
    color: white;
}

.flash-error {
    background: linear-gradient(135deg, #dc3545, #f68585);
    color: white;
}

.flash-alert .btn-close {
    background: rgba(255,255,255,0.3);
    border-radius: 50%;
    padding: 0.2rem;
    margin-left: auto;
    opacity: 0.8;
    transition: all 0.3s ease;
}

.flash-alert .btn-close:hover {
    opacity: 1;
    transform: scale(1.1);
}

/* Animation */
@keyframes flashSlideDown {
    to {
        opacity: 1;
        transform: translateY(0);
    }
}
</style>
