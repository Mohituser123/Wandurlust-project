<% layout("/layouts/boilerplate")%>

<style>
/* ===============================
   Filters – Premium Bar
================================ */
#filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 1.8rem;
    padding: 1.5rem 0;
    border-bottom: 1px solid rgba(0,0,0,0.08);
}

.filter {
    text-align: center;
    opacity: 0.75;
    transition: all 0.3s ease;
}

.filter i {
    font-size: 1.4rem;
    padding: 0.9rem;
    border-radius: 50%;
    background: rgba(0,0,0,0.04);
}

.filter:hover {
    opacity: 1;
    transform: translateY(-4px);
    cursor: pointer;
}

.filter p {
    font-size: 0.8rem;
    margin-top: 0.4rem;
    font-weight: 500;
}

/* Tax toggle */
.tax-toggle {
    margin-left: auto;
    background: rgba(255,255,255,0.8);
    backdrop-filter: blur(12px);
    border-radius: 999px;
    padding: 0.6rem 1.2rem;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
}

/* ===============================
   Listing Cards – Airbnb Style
================================ */
.listing-link {
    text-decoration: none;
    color: inherit;
}

.listing-card {
    border: none;
    border-radius: 20px;
    overflow: hidden;
    transition: all 0.35s ease;
    box-shadow: 0 15px 40px rgba(0,0,0,0.12);
}

.listing-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 30px 70px rgba(0,0,0,0.25);
}

.listing-card img {
    height: 20rem;
    object-fit: cover;
    transition: transform 0.4s ease;
}

.listing-card:hover img {
    transform: scale(1.08);
}

/* Gradient overlay */
.card-img-overlay {
    background: linear-gradient(to top, rgba(0,0,0,0.45), transparent);
}

/* Card body */
.card-body {
    padding: 1rem;
}

.card-text b {
    font-size: 1.05rem;
}

/* Price badge */
.price {
    display: inline-block;
    margin-top: 0.3rem;
    font-weight: 600;
}

/* Tax info */
.tax-info {
    display: none;
    font-size: 0.85rem;
    opacity: 0.75;
}
</style>

<!-- FILTERS -->
<div id="filters">

    <div class="filter">
        <i class="fa-solid fa-fire"></i>
        <p>Trending</p>
    </div>

    <div class="filter">
        <i class="fa-solid fa-bed"></i>
        <p>Rooms</p>
    </div>

    <div class="filter">
        <i class="fa-solid fa-mountain-city"></i>
        <p>Iconic Cities</p>
    </div>

    <div class="filter">
        <i class="fa-solid fa-mountain"></i>
        <p>Mountains</p>
    </div>

    <div class="filter">
        <i class="fa-solid fa-fort-awesome"></i>
        <p>Castles</p>
    </div>

    <div class="filter">
        <i class="fa-solid fa-person-swimming"></i>
        <p>Pools</p>
    </div>

    <div class="filter">
        <i class="fa-solid fa-campground"></i>
        <p>Camping</p>
    </div>

    <div class="filter">
        <i class="fa-solid fa-cow"></i>
        <p>Farms</p>
    </div>

    <div class="filter">
        <i class="fa-solid fa-snowflake"></i>
        <p>Arctic</p>
    </div>

    <div class="filter">
        <i class="fa-solid fa-igloo"></i>
        <p>Domes</p>
    </div>

    <div class="filter">
        <i class="fa-solid fa-ship"></i>
        <p>Boats</p>
    </div>

    <!-- TAX SWITCH -->
    <div class="tax-toggle">
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" id="switchCheckDefault">
            <label class="form-check-label ms-2">
                Show total with tax
            </label>
        </div>
    </div>

</div>

<!-- LISTINGS -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4 mt-3">
    <% for(let listing of allListings){ %>
        <div class="col">
            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="card listing-card">
                    <img src="<%= listing.image.url %>" alt="listing_image">

                    <div class="card-body">
                        <p class="card-text">
                            <b><%= listing.title %></b><br>
                            <span class="price">
                                ₹<%= listing.price.toLocaleString("en-IN") %>/ night
                            </span>
                            <span class="tax-info"> +18% GST</span>
                        </p>
                    </div>
                </div>
            </a>
        </div>
    <% } %>
</div>

<script>
    const taxSwitch = document.getElementById("switchCheckDefault");
    taxSwitch.addEventListener("change", () => {
        const taxInfo = document.querySelectorAll(".tax-info");
        taxInfo.forEach(info => {
            info.style.display = taxSwitch.checked ? "inline" : "none";
        });
    });
</script>
