<% layout("/layouts/boilerplate")%>

<style>
/* ===============================
   Edit Listing â€“ Premium UI
================================ */

.edit-wrapper {
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
}

.edit-card {
    background: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(18px);
    border-radius: 22px;
    padding: 2.5rem;
    box-shadow: 0 25px 60px rgba(0,0,0,0.15);
    animation: slideUp 0.6s ease;
}

@keyframes slideUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.edit-title {
    font-weight: 700;
    margin-bottom: 1.5rem;
    text-align: center;
}

.edit-title span {
    color: #ff385c;
}

/* Inputs */
.form-control,
textarea {
    border-radius: 14px;
    padding: 0.65rem 1rem;
    border: 1px solid #d1d5db;
    transition: all 0.25s ease;
}

.form-control:focus,
textarea:focus {
    border-color: #ff385c;
    box-shadow: 0 0 0 0.2rem rgba(255,56,92,0.2);
}

/* Image preview */
.edit-image-preview {
    margin-top: 0.5rem;
    border-radius: 18px;
    overflow: hidden;
    max-height: 220px;
    box-shadow: 0 12px 30px rgba(0,0,0,0.15);
}

.edit-image-preview img {
    width: 100%;
    object-fit: cover;
}

/* Button */
.edit-btn {
    width: 100%;
    background: linear-gradient(135deg, #ff385c, #fb7185);
    color: white;
    font-weight: 600;
    padding: 0.65rem;
    border-radius: 999px;
    border: none;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.edit-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 15px 35px rgba(255,56,92,0.45);
}

/* Labels */
.form-label {
    font-weight: 500;
    margin-bottom: 0.3rem;
}

/* Responsive */
@media (max-width: 768px) {
    .edit-card {
        padding: 1.8rem;
    }
}
</style>

<div class="edit-wrapper">
    <div class="col-md-8 col-lg-6">

        <div class="edit-card">
            <h3 class="edit-title">
                Edit Your <span>Listing</span>
            </h3>

            <form method="POST"
                  action="/listings/<%= listing._id %>?_method=PUT"
                  class="needs-validation"
                  novalidate
                  enctype="multipart/form-data">

                <!-- Title -->
                <div class="mb-3">
                    <label class="form-label">Title</label>
                    <input name="listing[title]"
                           value="<%= listing.title %>"
                           type="text"
                           class="form-control"
                           required>
                    <div class="invalid-feedback">Please enter a valid title</div>
                </div>

                <!-- Description -->
                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <textarea name="listing[description]"
                              class="form-control"
                              rows="4"
                              required><%= listing.description %></textarea>
                    <div class="invalid-feedback">Please enter a description</div>
                </div>

                <!-- Original Image -->
                <div class="mb-3">
                    <label class="form-label">Current Image</label>
                    <div class="edit-image-preview">
                        <img src="<%= originalImageUrl %>" alt="Listing image">
                    </div>
                </div>

                <!-- Upload New Image -->
                <div class="mb-3">
                    <label class="form-label">Upload New Image</label>
                    <input name="listing[image]"
                           type="file"
                           class="form-control">
                </div>

                <!-- Price & Country -->
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label class="form-label">Price</label>
                        <input name="listing[price]"
                               value="<%= listing.price %>"
                               type="number"
                               class="form-control"
                               required>
                        <div class="invalid-feedback">Invalid price</div>
                    </div>

                    <div class="mb-3 col-md-8">
                        <label class="form-label">Country</label>
                        <input name="listing[country]"
                               value="<%= listing.country %>"
                               type="text"
                               class="form-control"
                               required>
                        <div class="invalid-feedback">Invalid country</div>
                    </div>
                </div>

                <!-- Location -->
                <div class="mb-3">
                    <label class="form-label">Location</label>
                    <input name="listing[location]"
                           value="<%= listing.location %>"
                           type="text"
                           class="form-control"
                           required>
                    <div class="invalid-feedback">Invalid location</div>
                </div>

                <!-- Button -->
                <button class="edit-btn mt-3">
                    <i class="fa-solid fa-pen-to-square me-2"></i>
                    Update Listing
                </button>

            </form>
        </div>

    </div>
</div>
